<header>
  <h1><%= link_to "Quick Chess", root_path %></h1>
  <h2>Player Black</h2>
</header>

<article>
  <div id="canvas"></div>
  <div id="instructions"></div>
</article>


<script>
  $(function() {
    var p = new Player.Canvas($("#canvas"), "<%= @game_id %>", "black");
    p.checkForMove();

  });

  $(window).on("beforeunload", function() {
    $.ajax({
        url: "/games/" + "<%= @game_id %>",
        type: "PUT",
        data: "forfeit=Black&id=" + "<%= @game_id %>"
    });

    return "Leaving the page will result in a forfeit.";
  });

</script>